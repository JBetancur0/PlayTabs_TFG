<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    tools:context=".registrarse_activity">

    <ImageView
        android:id="@+id/img_regisLogo"
        android:layout_width="331dp"
        android:layout_height="119dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="98dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotabs1"
        android:contentDescription="@string/img_regisLogo" />

    <ImageView
        android:id="@+id/img_regisBack"
        android:layout_width="378dp"
        android:layout_height="508dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="95dp"
        android:alpha="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_regisLogo"
        app:srcCompat="@drawable/login_background"
        android:contentDescription="@string/img_regisBack" />

    <ImageView
        android:id="@+id/img_regisPick"
        android:layout_width="111dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_regisLogo"
        app:srcCompat="@drawable/pick"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/img_regisPick" />

    <TextView
        android:id="@+id/txt_correoRegis"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/sriracha"
        android:gravity="center"
        android:text="@string/txt_correo"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_regisLogo" />

    <TextView
        android:id="@+id/txt_passRegis"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sriracha"
        android:gravity="center"
        android:text="@string/txt_contraseÃ±a"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_correoRegis" />

    <EditText
        android:id="@+id/input_correoRegis"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="@font/sriracha"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_correoRegis"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/input_passRegis"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="@font/sriracha"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_passRegis"
        tools:ignore="SpeakableTextPresentCheck" />

    <CheckBox
        android:id="@+id/check_terminosRegis"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:fontFamily="@font/sriracha"
        android:gravity="center"
        android:text="@string/txt_terminos"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_passRegis" />

    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="174dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_radius"
        android:fontFamily="@font/sriracha"
        android:onClick="registrarse"
        android:text="@string/btn_iniciarRegister"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_terminosRegis" />

</androidx.constraintlayout.widget.ConstraintLayout>